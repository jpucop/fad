      "environments": [
        {
          "env": "[dev|qa|prod]",
          "name": "[development|staging|production]",
          "host": "aws",
          "app_profile": "tomcat-java",
          "deploy_profile": "aws-cicd-fargate-rds",
          "deploy_pipeline_name": "{name}-{env}-pipeline",
          "git_branch": "{env}",
          "aws": {
            "account_name": "finapps-{env}"
          }
        }
      ]
    }
  }
}